---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import Testimonials from '../components/Testimonials.astro';
import Manifeste from '../components/Manifeste.astro';
import ExpertiseCards from '../components/ExpertiseCards.astro';
import ToolsCarousel from '../components/ToolsCarousel.astro';
import Parcours from '../components/Parcours.astro';
import Pricing from '../components/Pricing.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

---

<Layout>
  <Navigation />

  <main>
    <!-- Hero + Logos clients -->
    <Hero />

    <!-- Stats mobile -->
    <Stats />

    <!-- Témoignages -->
    <Testimonials />

    <!-- Manifeste ("Ma vision") -->
    <Manifeste />

    <!-- Expertise (3 piliers) -->
    <ExpertiseCards />

    <!-- Stack (outils) -->
    <ToolsCarousel />

    <!-- À propos / Parcours -->
    <Parcours />

    <!-- Services -->
    <Pricing />

    <!-- CTA final -->
    <CTA />
  </main>

  <Footer />
</Layout>
