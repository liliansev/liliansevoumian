---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import ScrollingLogos from '../components/ScrollingLogos.astro';
import Stats from '../components/Stats.astro';
import Testimonials from '../components/Testimonials.astro';
import ToolsCarousel from '../components/ToolsCarousel.astro';
import Quote from '../components/Quote.astro';
import Expertise from '../components/Expertise.astro';
import Methodology from '../components/Methodology.astro';
import Timeline from '../components/Timeline.astro';
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

// Clients logos
const clients = [
  { text: "Qonto" },
  { text: "Jellysmack" },
  { text: "Edumiam" },
  { text: "Movecool" },
  { text: "KlaK" },
  { text: "WeTechCare" },
  { text: "Familytrip" },
  { text: "Boost ton Biz" },
  { text: "Deuxième Souffle" },
  { text: "Reborn" }
];

---

<Layout>
  <Navigation />

  <main>
    <Hero />

    <!-- Clients carousel -->
    <ScrollingLogos
      items={clients}
      title="De la startup au scale-up"
      speed={80}
      direction="left"
      showNames={false}
    />

    <Stats />

    <Expertise />

    <ToolsCarousel />

    <Quote quote="Je ne pourrais plus créer un business sans penser automatisation dès le premier jour." />

    <Methodology />

    <Testimonials />

    <Timeline />

    <Pricing />

    <FAQ />

    <CTA />
  </main>

  <Footer />
</Layout>
