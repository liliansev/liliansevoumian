---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import Manifeste from '../components/Manifeste.astro';
import ExpertiseCards from '../components/ExpertiseCards.astro';
import ToolsCarousel from '../components/ToolsCarousel.astro';
import Testimonials from '../components/Testimonials.astro';
import Methodology from '../components/Methodology.astro';
import Pricing from '../components/Pricing.astro';
import Parcours from '../components/Parcours.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

---

<Layout>
  <Navigation />

  <main>
    <!-- Hero + Logos clients -->
    <Hero />

    <!-- Stats mobile -->
    <Stats />

    <!-- Manifeste (NEW) -->
    <Manifeste />

    <!-- Expertise + Stack -->
    <ExpertiseCards />

    <!-- Outils automatisables -->
    <ToolsCarousel />

    <!-- Méthodologie -->
    <Methodology />

    <!-- Tarifs -->
    <Pricing />

    <!-- Témoignages (après tarifs = rassure avant décision) -->
    <Testimonials />

    <!-- Parcours + À propos (fusionnés) -->
    <Parcours />

    <!-- CTA final -->
    <CTA />
  </main>

  <Footer />
</Layout>
