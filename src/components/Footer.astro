---
import { Icon } from 'astro-icon/components';

const socialLinks = [
  { name: "LinkedIn", href: "https://www.linkedin.com/in/liliansevoumian/", icon: "simple-icons:linkedin" },
  { name: "YouTube", href: "https://www.youtube.com/@lilian.sevoumian", icon: "simple-icons:youtube" },
  { name: "Substack", href: "https://liliansevoumian.substack.com/", icon: "simple-icons:substack" }
];

const formations = [
  { name: "Apprendre Make", href: "https://apprendre-make.com" },
  { name: "Formation n8n", href: "https://formation-n8n.com" }
];
---

<footer class="bg-zinc-950 py-12 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-8 mb-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <img src="/logo_liliansevoumian.svg" alt="Logo Lilian Sevoumian" class="h-4 w-auto invert" />
          <span class="fluid-text-sm font-semibold text-white">Lilian Sevoumian</span>
        </div>
        <p class="fluid-text-sm md:text-xs text-zinc-400 leading-relaxed">
          J'automatise les business qui veulent scaler.<br />
          Make · n8n · Airtable
        </p>
      </div>

      <!-- Formations -->
      <div>
        <h4 class="text-sm font-medium text-white mb-3">
          Formations
        </h4>
        <ul class="space-y-1">
          {formations.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener"
                class="fluid-text-sm text-zinc-400 hover:text-white active:text-zinc-400 transition-colors flex items-center gap-1.5 py-2 -my-1"
              >
                {link.name}
                <Icon name="lucide:external-link" class="w-3.5 h-3.5" />
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Réseaux -->
      <div>
        <h4 class="text-sm font-medium text-white mb-3">
          Réseaux
        </h4>
        <ul class="space-y-1">
          {socialLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener"
                class="fluid-text-sm text-zinc-400 hover:text-white active:text-zinc-400 transition-colors flex items-center gap-2 py-2 -my-1"
              >
                <Icon name={link.icon} class="w-4 h-4" />
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-zinc-800">
      <p class="text-xs text-zinc-500 font-mono text-center">
        © 2026 Lilian Sevoumian · Built with Claude Code
      </p>
    </div>
  </div>
</footer>
