---
import { Icon } from 'astro-icon/components';

const socialLinks = [
  { name: "LinkedIn", href: "https://www.linkedin.com/in/liliansevoumian/", icon: "simple-icons:linkedin" },
  { name: "YouTube", href: "https://www.youtube.com/@lilian.sevoumian", icon: "simple-icons:youtube" },
  { name: "GitHub", href: "https://github.com/liliansev", icon: "simple-icons:github" }
];

const formations = [
  { name: "Apprendre Make", href: "https://apprendre-make.com" },
  { name: "Formation n8n", href: "https://formation-n8n.com" }
];
---

<footer class="bg-white border-t border-zinc-200 py-12 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Main Footer Content -->
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 bg-zinc-900 text-white flex items-center justify-center rounded-sm text-xs font-medium">
            LS
          </div>
          <span class="text-sm font-semibold text-zinc-900">Lilian Sevoumian</span>
        </div>
        <p class="text-xs text-zinc-500 leading-relaxed">
          J'automatise les business qui veulent scaler.<br />
          Make · n8n · Airtable
        </p>
      </div>

      <!-- Formations -->
      <div>
        <h4 class="text-xs font-semibold text-zinc-900 uppercase tracking-wider mb-4">
          Formations
        </h4>
        <ul class="space-y-2">
          {formations.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener"
                class="text-sm text-zinc-500 hover:text-zinc-900 transition-colors flex items-center gap-1"
              >
                {link.name}
                <Icon name="lucide:external-link" class="w-3 h-3" />
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-xs font-semibold text-zinc-900 uppercase tracking-wider mb-4">
          Contact
        </h4>
        <ul class="space-y-2">
          <li>
            <a
              href="https://cal.com/lilian-sevoumian/prise-de-brief"
              target="_blank"
              rel="noopener"
              class="text-sm text-zinc-500 hover:text-zinc-900 transition-colors flex items-center gap-1"
            >
              Prendre rendez-vous
              <Icon name="lucide:calendar" class="w-3 h-3" />
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-zinc-100 flex flex-col md:flex-row justify-between items-center gap-4">
      <!-- Copyright -->
      <div class="text-xs text-zinc-400 font-mono text-center md:text-left">
        <div>© 2026 Lilian Sevoumian. Tous droits réservés.</div>
        <div class="mt-1">Fait en code grâce à Claude Code ❤️</div>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener"
            aria-label={link.name}
            class="text-zinc-400 hover:text-zinc-900 transition-colors"
          >
            <Icon name={link.icon} class="w-4 h-4" />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
