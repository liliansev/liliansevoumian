---
const phases = [
  {
    number: "01",
    title: "Analyser",
    description: "Les automatisations doivent s'adapter à votre activité, pas l'inverse."
  },
  {
    number: "02",
    title: "Développer",
    description: "Développement itératif avec livrables réguliers. Vous voyez l'avancement en temps réel, on itère ensemble."
  },
  {
    number: "03",
    title: "Automatiser",
    description: "Tests, validation, documentation et formation. Je reste disponible pour le support et les évolutions."
  }
];
---

<section id="process" class="py-16 md:py-24 bg-zinc-950 px-6">
  <div class="max-w-5xl mx-auto">
    <div class="mb-10 md:mb-16">
      <p class="text-zinc-400 text-xs md:text-sm font-medium tracking-wider uppercase mb-3">
        Méthode
      </p>
      <h2 class="text-3xl md:text-5xl font-semibold text-white leading-tight">
        3 phases. Focus résultats.
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      {phases.map((phase) => (
        <div class="p-6 bg-zinc-900 border border-zinc-800 rounded-2xl hover:border-zinc-700 hover:bg-zinc-800/50 transition-all duration-300">
          <div class="flex items-baseline gap-3 md:block mb-3">
            <span class="text-sm font-semibold text-zinc-400 font-mono">
              {phase.number}
            </span>
            <h3 class="fluid-h4 font-semibold text-white md:mt-2">
              {phase.title}
            </h3>
          </div>
          <p class="text-zinc-400 fluid-text-sm leading-relaxed">
            {phase.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Micro-CTA -->
    <div class="mt-10 text-center">
      <a
        href="https://lilian.yt/contact"
        class="inline-flex items-center gap-2 text-sm text-zinc-400 hover:text-white transition-colors"
      >
        Discuter de mon projet
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"/>
          <path d="m12 5 7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
