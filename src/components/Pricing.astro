---
import { Icon } from 'astro-icon/components';
import MultiLine from './ui/MultiLine.astro';

const services = [
  {
    name: "Coaching",
    tagline: "Coincé ? Débloquez en 1h.",
    description: ["Un call, une solution.", "Vous repartez avec une direction claire."],
    cta: "Réserver un coaching",
    href: "https://cal.com/lilian-sevoumian/coaching-1"
  },
  {
    name: "Diagnostic",
    tagline: "Votre plan d'action en 72h.",
    description: ["Analyse complète de votre stack.", "Document + vidéo personnalisée."],
    cta: "Obtenir mon plan d'action",
    href: "https://cal.com/lilian-sevoumian/audit"
  },
  {
    name: "Mission",
    tagline: "Je construis. Ça tourne.",
    description: ["Vos automatisations en place, testées, documentées.", "Vous récupérez vos heures."],
    cta: "Discuter de mon projet",
    href: "https://lilian.yt/contact"
  }
];
---

<section id="tarifs" class="section-padding px-6 bg-white">
  <div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="mb-10 lg:mb-16">
      <p class="fluid-text-xs text-zinc-400 font-medium uppercase mb-3">
        Services
      </p>
      <h2 class="fluid-h1 font-semibold text-zinc-900 max-w-2xl">
        Travaillons ensemble.
      </h2>
    </div>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-3 gap-10 md:gap-6 lg:gap-8">
      {services.map((service) => (
        <div class="group">
          <!-- Name -->
          <p class="fluid-text-xs text-zinc-400 font-medium uppercase mb-2">
            {service.name}
          </p>

          <!-- Tagline -->
          <h3 class="fluid-h5 font-medium text-zinc-900 mb-3">
            {service.tagline}
          </h3>

          <!-- Description -->
          <p class="fluid-text-sm text-zinc-500 mb-4">
            <MultiLine lines={service.description} />
          </p>

          <!-- Link -->
          <a
            href={service.href}
            class="inline-flex items-center gap-1.5 fluid-text-sm font-medium text-zinc-900 hover:text-zinc-600 transition-colors"
          >
            {service.cta}
            <Icon name="lucide:arrow-right" class="w-4 h-4" />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
