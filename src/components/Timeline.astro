---

<section id="parcours" class="bg-zinc-900 py-24 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-16">
      <h2 class="fluid-h1 font-semibold text-white mb-4">
        5 ans d'automatisation
      </h2>
      <p class="text-zinc-400 font-light fluid-text-base leading-relaxed">
        De freelance débutant à expert top 5 mondial Make.
      </p>
    </div>

    <!-- Timeline -->
    <div class="space-y-8 md:space-y-0">
      {timeline.map((item, index) => (
        <div class="md:grid md:grid-cols-[100px_1fr] md:gap-8 group">
          <!-- Year -->
          <div class="flex flex-col items-start md:items-end md:pt-1">
            <span class={`fluid-text-sm font-semibold ${item.isCurrent ? 'text-white' : 'text-zinc-500'}`}>
              {item.year}
            </span>
            {item.badge && item.link ? (
              <a href={item.link} target="_blank" rel="noopener" class="text-xs text-zinc-500 hover:text-zinc-300 font-mono mt-1 underline underline-offset-2 whitespace-nowrap">{item.badge}</a>
            ) : item.badge && (
              <span class="text-xs text-zinc-500 font-mono mt-1 whitespace-nowrap">{item.badge}</span>
            )}
          </div>

          <!-- Content -->
          <div class={`mt-2 md:mt-0 pb-8 ${index === timeline.length - 1 ? 'pb-0' : ''}`}>
            <h3 class="fluid-h4 font-semibold text-white mb-2 group-hover:text-zinc-300 transition-colors">
              {item.title}
            </h3>
            <p class="text-zinc-400 fluid-text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
