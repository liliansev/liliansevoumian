---
// Minimalist line-art automation/workflow illustration
---

<svg
  viewBox="0 0 400 300"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="w-full h-auto"
>
  <!-- Background grid (subtle) -->
  <defs>
    <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
      <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#e4e4e7" stroke-width="0.5"/>
    </pattern>
    <!-- Subtle animation -->
    <style>
      .flow-line {
        stroke-dasharray: 12 6;
        animation: flow 4s linear infinite;
      }
      @keyframes flow {
        0% { stroke-dashoffset: 0; }
        100% { stroke-dashoffset: -36; }
      }
      .node-hover {
        transition: transform 0.3s ease;
      }
      .node-hover:hover {
        transform: scale(1.05);
      }
    </style>
  </defs>

  <rect width="400" height="300" fill="url(#grid)" opacity="0.5"/>

  <!-- Connection lines (animated) -->
  <path d="M 80 100 Q 140 80 180 120" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>
  <path d="M 180 120 L 260 120" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>
  <path d="M 260 120 Q 300 120 320 160" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>
  <path d="M 180 120 Q 180 160 180 200" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>
  <path d="M 180 200 Q 220 200 260 200" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>
  <path d="M 320 160 Q 320 180 320 200" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>
  <path d="M 260 200 L 320 200" stroke="#a1a1aa" stroke-width="1.5" fill="none" class="flow-line"/>

  <!-- Input Node (left) -->
  <g class="node-hover" style="transform-origin: 60px 100px;">
    <rect x="40" y="80" width="40" height="40" rx="8" fill="white" stroke="#d4d4d8" stroke-width="1.5"/>
    <circle cx="60" cy="100" r="8" fill="#18181b"/>
    <line x1="54" y1="100" x2="66" y2="100" stroke="white" stroke-width="1.5"/>
    <line x1="60" y1="94" x2="60" y2="106" stroke="white" stroke-width="1.5"/>
  </g>

  <!-- Process Node 1 (Make-style) -->
  <g class="node-hover" style="transform-origin: 180px 120px;">
    <rect x="155" y="95" width="50" height="50" rx="10" fill="white" stroke="#d4d4d8" stroke-width="1.5"/>
    <circle cx="180" cy="120" r="12" fill="#6366f1"/>
    <path d="M 174 120 L 180 125 L 186 115" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </g>

  <!-- Process Node 2 (n8n-style) -->
  <g class="node-hover" style="transform-origin: 260px 120px;">
    <rect x="235" y="95" width="50" height="50" rx="10" fill="white" stroke="#d4d4d8" stroke-width="1.5"/>
    <rect x="250" y="110" width="20" height="20" rx="4" fill="#ea580c"/>
  </g>

  <!-- Data Node (Airtable-style) -->
  <g class="node-hover" style="transform-origin: 180px 200px;">
    <rect x="155" y="175" width="50" height="50" rx="10" fill="white" stroke="#d4d4d8" stroke-width="1.5"/>
    <rect x="165" y="188" width="30" height="4" rx="1" fill="#18181b"/>
    <rect x="165" y="196" width="20" height="4" rx="1" fill="#a1a1aa"/>
    <rect x="165" y="204" width="25" height="4" rx="1" fill="#d4d4d8"/>
  </g>

  <!-- Output Node (right) -->
  <g class="node-hover" style="transform-origin: 320px 180px;">
    <rect x="295" y="155" width="50" height="50" rx="10" fill="white" stroke="#d4d4d8" stroke-width="1.5"/>
    <circle cx="320" cy="180" r="14" fill="#18181b"/>
    <path d="M 313 180 L 320 186 L 327 174" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </g>

  <!-- Decorative elements -->
  <circle cx="100" cy="240" r="3" fill="#d4d4d8"/>
  <circle cx="340" cy="80" r="4" fill="#e4e4e7"/>
  <circle cx="60" cy="180" r="2" fill="#d4d4d8"/>

  <!-- Small floating dots -->
  <circle cx="140" cy="60" r="2" fill="#a1a1aa"/>
  <circle cx="280" cy="250" r="2" fill="#a1a1aa"/>
  <circle cx="360" cy="140" r="2" fill="#a1a1aa"/>
</svg>
