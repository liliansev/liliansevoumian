---
const stats = [
  {
    value: "300+",
    label: "Personnes formées"
  },
  {
    value: "100+",
    label: "Entreprises accompagnées"
  },
  {
    value: "2 000+",
    label: "Heures économisées"
  }
];
---

<section class="py-12 bg-white">
  <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-2 md:gap-0">
    {stats.map((stat) => (
      <div class="p-4 md:p-8 text-center">
        <div class="fluid-h4 font-semibold text-zinc-900">
          {stat.value}
        </div>
        <div class="text-xs text-zinc-600 mt-1 uppercase tracking-wider">
          {stat.label}
        </div>
      </div>
    ))}
  </div>
</section>
