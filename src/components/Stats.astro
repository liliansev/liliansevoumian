---
const stats = [
  {
    value: "300+",
    label: "Personnes formées"
  },
  {
    value: "100+",
    label: "Entreprises accompagnées"
  },
  {
    value: "2 000+",
    label: "Heures économisées"
  }
];
---

<section class="py-6 bg-white md:hidden">
  <div class="max-w-sm mx-auto px-6 flex flex-col gap-4">
    {stats.map((stat) => (
      <div class="flex items-center justify-between py-3 border-b border-zinc-100 last:border-0">
        <span class="text-xs text-zinc-500 uppercase tracking-wider">{stat.label}</span>
        <span class="text-lg font-semibold text-zinc-900">{stat.value}</span>
      </div>
    ))}
  </div>
</section>
