---
const stats = [
  {
    value: "300+",
    label: "Personnes formées"
  },
  {
    value: "14k+",
    label: "Réponses à la communauté NoCode"
  },
  {
    value: "1 000+",
    label: "Scénarios automatisés"
  }
];
---

<section class="border-y border-zinc-200 bg-white">
  <div class="max-w-7xl mx-auto grid grid-cols-3 divide-x divide-zinc-100">
    {stats.map((stat) => (
      <div class="p-6 md:p-8 text-center md:text-left">
        <div class="fluid-h4 font-semibold text-zinc-900">
          {stat.value}
        </div>
        <div class="text-xs text-zinc-600 mt-1 uppercase tracking-wider">
          {stat.label}
        </div>
      </div>
    ))}
  </div>
</section>
