---
import { Icon } from 'astro-icon/components';

const tools = [
  {
    name: "Make",
    icon: "simple-icons:make",
    description: "L'outil #1 du marché. Process complexes, centaines de données — ça tourne.",
    features: ["+1000 connecteurs", "Fiable et scalable"]
  },
  {
    name: "n8n",
    icon: "simple-icons:n8n",
    description: "Automatisation pensée pour l'IA. Agents, LLMs, workflows avancés.",
    features: ["IA native", "Self-host possible"]
  },
  {
    name: "Airtable",
    icon: "simple-icons:airtable",
    description: "Bases de données sur-mesure. CRM, ERP, outils internes — interfaces claires.",
    features: ["No-code DB", "Interfaces équipes"]
  }
];
---

<section id="expertise" class="py-24 px-6 bg-zinc-50">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-16 md:w-2/3">
      <h2 class="fluid-h1 font-semibold text-zinc-900 mb-4">
        Ma stack pour vous accompagner
      </h2>
      <p class="text-zinc-600 font-light fluid-text-base fluid-prose-lg leading-relaxed">
        Mes outils de prédilection pour automatiser votre business.
      </p>
    </div>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-3 gap-6">
      {tools.map((tool) => (
        <div class="group p-8 bg-white border border-zinc-200 rounded-xl card-interactive">
          <!-- Icon -->
          <div class="mb-6">
            <Icon name={tool.icon} class="w-8 h-8 text-zinc-700" />
          </div>

          <!-- Title -->
          <h3 class="fluid-h3 font-semibold text-zinc-900 mb-3">
            {tool.name}
          </h3>

          <!-- Description -->
          <p class="fluid-text-sm text-zinc-600 leading-relaxed mb-6" set:html={tool.description} />

          <!-- Features -->
          <ul class="fluid-text-sm text-zinc-500 space-y-2 font-mono">
            {tool.features.map((feature) => (
              <li class="flex items-center gap-2">
                <Icon name="lucide:check" class="w-3.5 h-3.5 text-zinc-400 shrink-0" />
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
