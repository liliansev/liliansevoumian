---
import { Icon } from 'astro-icon/components';

const tools = [
  {
    name: "Make",
    icon: "simple-icons:make",
    description: "Connexion de tous vos outils entre eux.<br />Automatisation de process complexes,<br />même avec des centaines de données à traiter.",
    features: ["Connecte tous vos outils", "Traite vos données automatiquement", "Gère les erreurs sans vous"]
  },
  {
    name: "n8n",
    icon: "simple-icons:n8n",
    description: "Automatisation pensée pour l'IA.<br />Intégrez des agents, des LLMs et des workflows<br />intelligents directement dans vos process.",
    features: ["IA native dans chaque workflow", "Agents et LLMs intégrés", "Aucune limite technique"]
  },
  {
    name: "Airtable",
    icon: "simple-icons:airtable",
    description: "Bases de données sur-mesure.<br />CRM, ERP, suivi RH — avec des interfaces<br />pensées pour vos équipes.",
    features: ["Structure sur-mesure", "Interfaces simples pour vos équipes", "Automatisations intégrées"]
  }
];
---

<section id="expertise" class="py-24 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-16 md:w-2/3">
      <h2 class="text-3xl md:text-4xl font-semibold text-zinc-900 tracking-tight mb-4">
        Ma stack pour vous accompagner
      </h2>
      <p class="text-zinc-500 font-light fluid-text-lg fluid-prose-lg">
        Mes outils de prédilection pour automatiser votre business.
      </p>
    </div>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-3 gap-6">
      {tools.map((tool) => (
        <div class="group p-8 bg-white border border-zinc-200 rounded-lg shadow-sm hover:shadow-lg hover:border-zinc-300 transition-all">
          <!-- Icon -->
          <div class="mb-6">
            <Icon name={tool.icon} class="w-8 h-8 text-zinc-700" />
          </div>

          <!-- Title -->
          <h3 class="text-xl font-semibold text-zinc-900 mb-3 tracking-tight">
            {tool.name}
          </h3>

          <!-- Description -->
          <p class="text-sm text-zinc-500 leading-relaxed mb-6" set:html={tool.description} />

          <!-- Features -->
          <ul class="text-sm md:text-xs text-zinc-400 space-y-2 font-mono">
            {tool.features.map((feature) => (
              <li class="flex items-center gap-2">
                <Icon name="lucide:check" class="w-3.5 h-3.5 md:w-3 md:h-3 text-zinc-500" />
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
