---
interface Props {
  quote: string;
}

const { quote } = Astro.props;
---

<div class="py-16 md:py-20 px-6 bg-zinc-50/50">
  <div class="max-w-3xl mx-auto">
    <blockquote class="relative pl-8 md:pl-12 border-l-4 border-zinc-900">
      <!-- Giant decorative quotation mark -->
      <span class="absolute -left-2 md:-left-4 -top-4 text-7xl md:text-8xl font-serif text-zinc-200 select-none leading-none" aria-hidden="true">"</span>

      <p class="text-xl md:text-2xl text-zinc-700 font-medium leading-relaxed italic">
        {quote}
      </p>

      <!-- Attribution -->
      <footer class="mt-6 flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-zinc-200 flex items-center justify-center text-zinc-600 font-semibold text-sm">
          LS
        </div>
        <div>
          <cite class="text-sm font-semibold text-zinc-900 not-italic">Lilian Sevoumian</cite>
          <p class="text-xs text-zinc-500">Expert No-Code & Automatisations</p>
        </div>
      </footer>
    </blockquote>
  </div>
</div>
